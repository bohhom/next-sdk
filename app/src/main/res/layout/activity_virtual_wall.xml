<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.lib.sdk.next.NextMapView
        android:id="@+id/next_map_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/open_wall_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开启虚拟墙操作"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/create_wall_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="创建虚拟墙"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/open_wall_button"
        app:layout_constraintVertical_bias="0.1" />


    <Button
        android:id="@+id/delete_wall_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="删除虚拟墙"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/create_wall_button"
        app:layout_constraintVertical_bias="0.1" />

    <Button
        android:id="@+id/close_wall_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关闭虚拟墙操作"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/delete_wall_btn"
        app:layout_constraintVertical_bias="0.1" />
</androidx.constraintlayout.widget.ConstraintLayout>