<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.lib.sdk.next.NextMapView
        android:id="@+id/nextMapView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/upload_project_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上传工程"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <Button
        android:id="@+id/change_project_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="切换工程"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/upload_project_btn"
        app:layout_constraintVertical_bias="0.1" />


    <Button
        android:id="@+id/change_name_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="更换项目名称"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/change_project_btn"
        app:layout_constraintVertical_bias="0.1" />

    <Button
        android:id="@+id/delete_project_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="删除项目"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/change_name_btn"
        app:layout_constraintVertical_bias="0.1" />

</androidx.constraintlayout.widget.ConstraintLayout>