<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.lib.sdk.next.NextMapView
        android:id="@+id/next_map_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/create_point_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="创建点的名称"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"  />

    <Button
        android:id="@+id/create_by_touch_point_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手动创建导航点"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/create_point_name" />


    <Button
        android:id="@+id/save_by_touch_point_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保存创建导航点"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/create_by_touch_point_button" />


    <Button
        android:id="@+id/create_by_robot_point_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="示教创建导航点"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/save_by_touch_point_button" />

    <Button
        android:id="@+id/edit_point_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="编辑导航点"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/create_by_robot_point_button"
        app:layout_constraintVertical_bias="0.1" />

    <Button
        android:id="@+id/delete_point_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="删除导航点"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_point_button"
        app:layout_constraintVertical_bias="0.1" />

    <Button
        android:id="@+id/edit_name_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="更改选中点名称"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/delete_point_btn"
        app:layout_constraintVertical_bias="0.1" />

    <EditText
        android:id="@+id/edit_name_ed"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="更改选中点名称"
        app:layout_constraintBottom_toBottomOf="@id/edit_name_button"
        app:layout_constraintStart_toEndOf="@id/edit_name_button"
        app:layout_constraintTop_toTopOf="@id/edit_name_button"
        app:layout_constraintVertical_bias="0.1" />

</androidx.constraintlayout.widget.ConstraintLayout>