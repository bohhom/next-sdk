<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.lib.sdk.next.NextMapView
        android:id="@+id/next_map_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/task_nav_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2D导航"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/task_cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消2D导航"
        app:layout_constraintEnd_toEndOf="@id/task_nav_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/task_nav_btn" />


    <Button
        android:id="@+id/task_rest_stop_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="停止并且复位"
        app:layout_constraintEnd_toEndOf="@id/task_nav_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/task_cancel_btn"
        />


    <Button
        android:id="@+id/task_rest_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="复位"
        app:layout_constraintEnd_toEndOf="@id/task_nav_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/task_rest_stop_btn"
        />

</androidx.constraintlayout.widget.ConstraintLayout>